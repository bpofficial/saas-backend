{
    "compilerOptions": {
        "module": "commonjs",
        "declaration": true,
        "removeComments": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "target": "es6",
        "sourceMap": true,
        "outDir": "./dist",
        "allowJs": true,
        "baseUrl": "./",
        "incremental": true,
        "moduleResolution": "node",
        "skipLibCheck": true,
        "allowSyntheticDefaultImports": true,
        "paths": {
            "@server/core": [
                "libs/core/src"
            ],
            "@server/core/*": [
                "libs/core/src/*"
            ],
            "@server/common": [
                "libs/common/src"
            ],
            "@server/common/*": [
                "libs/common/src/*"
            ],
            "@server/repository": [
                "libs/repository/src"
            ],
            "@server/repository/*": [
                "libs/repository/src/*"
            ],
            "@juicycleff/repo-orm": [
                "libs/repo-orm/src"
            ],
            "@juicycleff/repo-orm/*": [
                "libs/repo-orm/src/*"
            ],
            "@server/contracts": [
                "libs/contracts/src"
            ],
            "@server/contracts/*": [
                "libs/contracts/src/*"
            ],
            "@server/proto-schema": [
                "libs/proto-schema/src"
            ],
            "@server/proto-schema/*": [
                "libs/proto-schema/src/*"
            ]
        }
    },
    "exclude": [
        "node_modules",
        "dist"
    ],
    "files": [
        "definitions/type.d.ts"
    ]
}
